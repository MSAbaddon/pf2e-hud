<div class="pf2e-hud-random">
    <div class="rows">
        {{#each actors as |actor|}}
        <span class="name{{#if actor.targeted}} targeted{{/if}}">
            <span>{{actor.name}}</span>
        </span>
        {{#if actor.targeted}}
        <span class="targeted">
            <i class="fa-solid fa-crosshairs-simple"></i>
        </span>
        {{else}}
        <span></span>
        {{/if}}
        {{/each}}
    </div>
</div>